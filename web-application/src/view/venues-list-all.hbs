<div class="content">
	<h1>All Stores</h1>
	{{#if isAdmin}}
	<form action="/stores/create" method="GET">
		<input class="button is-success" type="submit" value="Create a new store">
	</form>
	{{/if}}
	{{#if errors.length}}
		<p>Oh no, something went wrong:</p>
		<ul>
			{{#each errors}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
		{{else}}

			{{#if stores.length}}
				{{#each stores}}
				<a href="/posts/{{name}}">
					<div class="card">
						<div class="card-content">
							<div class="media">
								<figure class="image is-48x48">
								<img src="/uploads/{{storeImage}}" alt="Placeholder image">
								</figure>
							</div>
							<p class="title">{{name}}</p>
						</div>
					</div>
					{{/each}}
			{{else}}
			<p>No stores exist yet.</p>
			{{/if}}

		{{/if}}
</div>